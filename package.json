{
  "name": "dungeon-ledger",
  "version": "1.0.0",
  "workspaces": [
    "src/frontend",
    "src/backend",
    "src/shared"
  ],
  "scripts": {
    "dev:types": "npx tsc -b --watch",
    "dev:backend": "npm run dev -w src/backend",
    "dev:frontend": "npm run dev -w src/frontend",
    "dev": "concurrently -n types,backend,frontend -c yellow,green,cyan \"npm run dev:types\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "tsc -b src/shared src/backend src/frontend"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
